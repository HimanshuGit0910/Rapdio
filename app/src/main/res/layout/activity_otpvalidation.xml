<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.phoneSendOtp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/ic_rectangle_button"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />


        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/productsansregular"
            android:paddingBottom="@dimen/_5sdp"
            android:text="Enter Phone Number"
            android:textColor="@color/black"
            android:paddingStart="@dimen/_20sdp"
            android:textSize="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <TextView
            android:id="@+id/tvWelcome4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:paddingStart="@dimen/_10sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:text="OTP Will be sent to this number"
            android:textSize="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvWelcome" />


        <TextView
            android:id="@+id/phoneOtp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text=""
            android:fontFamily="@font/lato_regular"
            android:textSize="@dimen/_15sdp"
            android:paddingStart="@dimen/dp_5"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/tvWelcome4"
            app:layout_constraintStart_toEndOf="@+id/tvWelcome4"
            app:layout_constraintTop_toTopOf="@+id/tvWelcome4" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_40sdp"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="@dimen/_20sdp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar2"
            app:srcCompat="@drawable/otp" />

    <EditText
        android:id="@+id/phoneSend"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/button_desgin"
        android:ems="10"
        android:hint="@string/Enter_Mobile_Number"
        android:layout_marginStart="@dimen/_30sdp"
        android:paddingStart="@dimen/_40sdp"
        android:fontFamily="@font/lato_regular"
        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:inputType="phone"
        android:layout_marginTop="@dimen/_25sdp"
        android:maxLength="10"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvWelcome4" />


        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/rect_round_mob"
            android:fontFamily="@font/productsansregular"
            android:text="Send OTP"
            android:textColor="@color/yellow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="+91"
        android:textSize="@dimen/_20sdp"
        android:textColor="@color/black"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/phoneSend"
        app:layout_constraintStart_toStartOf="@+id/phoneSend"
        app:layout_constraintTop_toTopOf="@+id/phoneSend" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="By continuing,you agree to the               and\n                        of Rapdio"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/productsansregular"
        android:layout_marginBottom="@dimen/_30sdp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_12sdp"
        android:text="terms"
        android:fontFamily="@font/lato_regular"
        android:textColor="@color/Blue"
        android:layout_marginLeft="@dimen/_138sdp"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:id="@+id/pricy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Privacy Policy"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_75sdp"
        android:textColor="@color/Blue"
        android:fontFamily="@font/lato_regular"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

</androidx.constraintlayout.widget.ConstraintLayout>